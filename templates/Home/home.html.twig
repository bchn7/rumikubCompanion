{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center justify-center min-h-screen">
        <!-- Flash Message Section -->
        <div class="w-full max-w-4xl p-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success bg-green-500 text-white p-4 rounded-lg shadow-md mb-4">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <!-- Options Buttons -->
        <div id="box" class="bg-slate-700 p-16 rounded-lg mb-4 shadow-xl shadow-black max-w-6xl w-full flex flex-col items-center">

            <a href="{{ path('timer_home') }}" class="mb-6 w-full max-w-[300px]">
                <button class="bg-slate-600 text-white px-12 py-6 text-xl rounded shadow-md hover:bg-slate-700 w-full">
                    Start Round (Timer)
                </button>
            </a>

            <a href="{{ path('player') }}" class="mb-6 w-full max-w-[300px]">
                <button class="bg-slate-600 text-white px-12 py-6 text-xl rounded shadow-md hover:bg-slate-700 w-full">
                    Players
                </button>
            </a>

            <a href="{{ path('rummikub_add_points') }}" class="mb-6 w-full max-w-[300px]">
                <button class="bg-slate-600 text-white px-12 py-6 text-xl rounded shadow-md hover:bg-slate-700 w-full">
                    Add Points
                </button>
            </a>
        </div>
    </div>
{% endblock %}