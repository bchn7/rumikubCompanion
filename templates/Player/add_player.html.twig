{% extends 'base.html.twig' %}

{% block body %}

    <div class="flex flex-col items-center justify-center min-h-screen">
        <div id="box" class="bg-slate-600 p-8 rounded-lg mb-4 shadow-xl shadow-black max-w-lg w-full">
            <div id="timer" class="font-bold text-[48px] box-border h-full p-8 flex items-center justify-center">
                <form action="{{ path('add_player') }}" method="POST" class="w-full flex flex-col items-center">
                    <div class="mb-4 w-full">
                        <label for="name" class="text-white text-lg">Name</label>
                        <input type="text" id="name" name="name" required class="mt-2 p-2 w-full rounded bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div class="mb-4 w-full">
                        <button type="submit" class="bg-blue-500 text-white px-6 py-3 rounded shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full">
                            Add Player
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}