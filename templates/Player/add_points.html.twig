{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col items-center justify-center min-h-screen">

        <!-- Flash Message Section -->
        <div class="w-full max-w-4xl p-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success bg-green-500 text-white p-4 rounded-lg shadow-md mb-4">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <!-- Form Box for Adding Points -->
        <div id="box" class="bg-slate-600 p-10 rounded-lg mb-4 shadow-xl shadow-black max-w-6xl w-full">
            <div id="timer" class="font-bold text-[48px] box-border h-full p-8 flex flex-col items-center justify-center">

                <h1 class="text-white mb-6">Add Points to Players</h1>

                <!-- Points Form -->
                <form action="{{ path('rummikub_add_points') }}" method="POST">
                    <table class="min-w-full table-auto bg-gray-800 text-white rounded-lg overflow-hidden shadow-lg mb-6">
                        <thead>
                        <tr>
                            <th class="px-4 py-2 text-left">Name</th>
                            <th class="px-4 py-2 text-left">Points</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for player in players %}
                            <tr class="border-b border-gray-600">
                                <td class="px-4 py-2">{{ player.Name }}</td>
                                <td class="px-4 py-2">
                                    <input type="string" id="points_{{ player.Name }}" name="points[{{ player.Name }}]" value="0" class="form-control bg-gray-700 text-white border border-gray-600 p-2 rounded">
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <!-- Submit Button inside the same form -->
                    <div class="w-full max-w-6xl flex justify-center mb-4">
                        <button type="submit" class="bg-gray-800 text-white px-6 py-3 rounded shadow-md hover:bg-slate-700">
                            Submit Points
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}